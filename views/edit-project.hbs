<h1>Edit Project</h1>
{{#if errors.length}}
    <p>Could not create the human because:</p>
    <ul>
        {{#each errors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<form action="/edit-project/{{project.id}}" method="POST" id="all-forms">
    <div>
        Name: <input type="text" name="name" value="{{project.name}}">
    </div>
    <div>
        Date: <input type="date" name="date" value="{{project.date}}">
    </div>
    <div >
        Content: <input type="text" name="content" value="{{project.content}}">
    </div>
    <div>
        Link: <input type="text" name="link" value="{{project.link}}">
    </div>
    <input type="submit" value="Update project" id="submit-button">
</form>
