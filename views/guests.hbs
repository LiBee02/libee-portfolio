<div class="guests">
    <h1>Guestbook</h1>

    {{#if dbError}}
        <p>Cannot display the page now, try again later.</p>

    {{else}}

    {{#if guests.length}}
    {{#if isLoggedIn}}
        <ul id="guestbook-ul">
            {{#each guests}}
            <li><a href="/guest/{{id}}">{{firstname}}</a><br>{{message}}</li>
            {{/each}}
        </ul>
    {{/if}}

    {{#unless isLoggedIn}}
        <ul id="guestbook-ul">
            {{#each guests}}
            <li><a style="cursor:default;">{{firstname}}</a><br>{{message}}</li>
            {{/each}}
        </ul>
    {{/unless}}

    {{else}}

    <p>No guests have written here yet.</p>

    {{/if}}

    {{/if}}
</div>

